# Test entry - runs every minute
* * * * * echo "Cron is working $(date)" >> /app/logs/cron.log 2>&1

# Existing cron jobs
* * * * * date >> /app/logs/cron.log 2>&1 && /usr/bin/curl -s http://localhost:5000/api/rapid-bus-kl >> /app/logs/cron.log 2>&1
